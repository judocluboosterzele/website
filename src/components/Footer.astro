---
import "../styles/footer.css";
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>Judoclub Oosterzele</h3>
        <p>
          Traditioneel judo voor alle leeftijden in een moderne, veilige
          omgeving.
        </p>
      </div>

      <div class="footer-section">
        <h4>Contact</h4>
        <p>
          Sporthal De Bruul<br />
          Bruulstraat 15<br />
          9968 Oosterzele
        </p>
        <p>
          <strong>Email:</strong> info@judocluboosterzele.be<br />
          <strong>Tel:</strong> +32 9 123 45 67
        </p>
      </div>

      <div class="footer-section">
        <h4>Trainingstijden</h4>
        <p>
          <strong>Jeugd:</strong> Ma & Wo 18:00-19:00<br />
          <strong>Jongeren:</strong> Ma & Wo 19:00-20:30<br />
          <strong>Volwassenen:</strong> Di & Do 20:00-21:30
        </p>
      </div>
    </div>

    <div class="footer-bottom">
      <p>
        &copy; <span id="year"></span> Judoclub Oosterzele. Alle rechten voorbehouden.
      </p>
    </div>
  </div>
</footer>

<script>
  const yearSpan = document.getElementById("year");

  if (yearSpan instanceof HTMLElement) {
    yearSpan.textContent = String(new Date().getFullYear());
  }
</script>
