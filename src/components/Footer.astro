---
import "../styles/footer.css";
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>Judoclub Oosterzele</h3>
        <p>Vermoedelijk de leukste club van het land.</p>
      </div>

      <div class="footer-section">
        <h4>Contact</h4>
        <p>
          <strong>Algemeen:</strong>
          <a href="mailto:info@judocluboosterzele.be"
            >info@judocluboosterzele.be</a
          ><br />
          <strong>Kleuterjudo:</strong>
          <a href="mailto:kleuterjudo@judocluboosterzele.be"
            >kleuterjudo@judocluboosterzele.be</a
          ><br />
          <strong>Tel:</strong> +32 486 43 50 82
        </p>
      </div>

      <div class="footer-section">
        <h4>Locatie</h4>
        <p>
          Sporthal De Kluize<br />
          Sportstraat 5<br />
          9860 Oosterzele
        </p>
      </div>
    </div>

    <div class="footer-bottom">
      <p>
        &copy; <span id="year"></span> Judoclub Oosterzele. Alle rechten voorbehouden.
      </p>
    </div>
  </div>
</footer>

<script>
  const yearSpan = document.getElementById("year");

  if (yearSpan instanceof HTMLElement) {
    yearSpan.textContent = String(new Date().getFullYear());
  }
</script>
