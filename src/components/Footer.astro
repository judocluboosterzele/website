---
import "../styles/footer.css";
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>Judoclub Oosterzele</h3>
        <p>Vermoedelijk de leukste club van het land.</p>
      </div>

      <div class="footer-section">
        <h4>Contact</h4>
        <p>
          <strong>Algemeen:</strong>
          <a href="mailto:info@judocluboosterzele.be"
            >info@judocluboosterzele.be</a
          ><br />
          <strong>Kleuterjudo:</strong>
          <a href="mailto:kleuterjudo@judocluboosterzele.be"
            >kleuterjudo@judocluboosterzele.be</a
          ><br />
          <strong>Tel:</strong> +32 486 43 50 82
        </p>
      </div>

      <div class="footer-section">
        <h4>Locatie</h4>
        <p>
          Sporthal De Kluize<br />
          Sportstraat 5<br />
          9860 Oosterzele
        </p>
      </div>
    </div>
    <div class="footer-section social-icons">
      <a
        href="https://www.facebook.com/judocluboosterzele"
        target="_blank"
        aria-label="Facebook"
        class="facebook"
      >
        <i class="fab fa-facebook-f"></i>
      </a>
      <a
        href="https://www.instagram.com/judocluboosterzele"
        target="_blank"
        aria-label="Instagram"
        class="instagram"
      >
        <i class="fab fa-instagram"></i>
      </a>
      <a
        href="https://x.com/jcoosterzele"
        target="_blank"
        aria-label="X"
        class="x"
      >
        <i class="fab fa-x-twitter"></i>
      </a>
      <a
        href="https://www.tiktok.com/@judocluboosterzele"
        target="_blank"
        aria-label="TikTok"
        class="tiktok"
      >
        <i class="fab fa-tiktok"></i>
      </a>
    </div>
    <div class="footer-bottom">
      <p>
        &copy; <span id="year"></span> Judoclub Oosterzele. Alle rechten voorbehouden.
      </p>
    </div>
  </div>
</footer>

<script>
  const yearSpan = document.getElementById("year");

  if (yearSpan instanceof HTMLElement) {
    yearSpan.textContent = String(new Date().getFullYear());
  }
</script>
