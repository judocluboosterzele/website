---
interface Props {
  title: string;
  description: string;
  primaryButtonText: string;
  primaryButtonLink: string;
  secondaryButtonText: string;
  secondaryButtonLink: string;
}

const { title, description, primaryButtonText, primaryButtonLink, secondaryButtonText, secondaryButtonLink } = Astro.props;
---

<section class="cta">
  <div class="container">
    <div class="cta-content card">
      <h2>{title}</h2>
      <p>{description}</p>
      <div class="cta-buttons">
        <a href={primaryButtonLink} class="btn">{primaryButtonText}</a>
        <a href={secondaryButtonLink} class="btn btn-secondary">{secondaryButtonText}</a>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    padding: 4rem 0;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta h2 {
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>