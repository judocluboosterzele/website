---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import HeroSection from "../components/HeroSection.astro";
import FeatureCard from "../components/FeatureCard.astro";
import TrainingGroupCard from "../components/TrainingGroupCard.astro";
import CTASection from "../components/CTASection.astro";

// Images
import heroImage from "../assets/images/hero.png";
---

<Layout
  title="Judo Club Oosterzele - Traditioneel Judo voor Alle Leeftijden"
  description="Ontdek de kunst van judo bij Judo Club Oosterzele. Professionele training voor kinderen, jongeren en volwassenen in een moderne dojo."
>
  <Navigation />

  <main>
    <HeroSection
      title="Welkom bij"
      subtitle="Judoclub Oosterzele"
      description="Ontdek de traditionele kunst van judo in onze moderne dojo. Wij bieden professionele training voor alle leeftijden en niveaus, met focus op techniek, respect en persoonlijke ontwikkeling."
      primaryButtonText="Probeer Gratis"
      primaryButtonLink="/contact/"
      secondaryButtonText="Leer Meer"
      secondaryButtonLink="/about/"
      imageUrl={heroImage}
      imageAlt="Foto startpagina"
    />

    <section class="features">
      <div class="container">
        <h2>Waarom Kiezen Voor Onze Club?</h2>

        <div class="features-grid">
          <FeatureCard
            title="Erkend met Gouden Label"
            description="Onze club is officieel erkend door de Vlaamse Judo Federatie met het prestigieuze Gouden Label voor kwaliteit en veiligheid."
            imageUrl={heroImage}
            imageAlt="Gouden Label Judo Federatie"
            loading="eager"
          />

          <FeatureCard
            title="Ervaren Instructeurs"
            description="Onze gediplomeerde trainers hebben jarenlange ervaring en begeleiden je stap voor stap."
            imageUrl={heroImage}
            imageAlt="Ervaren instructeurs"
            loading="eager"
          />

          <FeatureCard
            title="Alle Leeftijden"
            description="Van 6 jaar tot volwassenen - iedereen is welkom om judo te leren in een veilige omgeving."
            imageUrl={heroImage}
            imageAlt="Alle leeftijden welkom"
          />

          <FeatureCard
            title="Wedstrijd & Recreatie"
            description="Of je nu wilt wedstrijden of gewoon voor de fun traint, wij hebben het juiste programma."
            imageUrl={heroImage}
            imageAlt="Wedstrijd en recreatie"
          />
        </div>
      </div>
    </section>

    <section class="training-groups">
      <div class="container">
        <h2>Onze Trainingsgroepen</h2>
        <div class="groups-grid">
          <TrainingGroupCard
            title="Jeugd (6-12 jaar)"
            description="Spelenderwijs leren van judotechnieken, coördinatie en sociale vaardigheden."
            price="€180/jaar"
            schedules={[
              { day: "Ma & Wo", time: "18:00 - 19:00" },
              { day: "Zaterdag", time: "10:00 - 11:00" },
            ]}
          />

          <TrainingGroupCard
            title="Jongeren (13-17 jaar)"
            description="Technische training, wedstrijdvoorbereiding en conditietraining voor tieners."
            price="€180/jaar"
            schedules={[
              { day: "Ma & Wo", time: "19:00 - 20:30" },
              { day: "Zaterdag", time: "11:00 - 12:30" },
            ]}
          />

          <TrainingGroupCard
            title="Volwassenen (18+)"
            description="Recreatief of wedstrijdjudo, afhankelijk van je persoonlijke doelen."
            price="€220/jaar"
            schedules={[
              { day: "Di & Do", time: "20:00 - 21:30" },
              { day: "Zaterdag", time: "14:00 - 15:30" },
            ]}
          />
        </div>
      </div>
    </section>

    <CTASection
      title="Klaar om te Beginnen?"
      description="Kom langs voor een gratis proefles en ontdek wat judo voor jou kan betekenen. Geen ervaring vereist!"
      primaryButtonText="Contact Opnemen"
      primaryButtonLink="/contact/"
      secondaryButtonText="Trainingsschema"
      secondaryButtonLink="/groepen/"
    />
  </main>

  <Footer />
  <style>
    .features {
      padding: 4rem 0;
    }

    .features h2 {
      text-align: center;
      margin-bottom: 3rem;
      font-size: 2.5rem;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .training-groups {
      padding: 4rem 0;
      background: var(--color-white);
    }

    .training-groups h2 {
      text-align: center;
      margin-bottom: 3rem;
      font-size: 2.5rem;
    }

    .groups-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    @media (max-width: 768px) {
      .features-grid,
      .groups-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Layout>
