---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import HeroSection from "../components/HeroSection.astro";
import FeatureCard from "../components/FeatureCard.astro";
import TrainingGroupCard from "../components/TrainingGroupCard.astro";
import CTASection from "../components/CTASection.astro";

// Images
import heroImage from "../assets/images/hero.png";
import goudenLabel from "../assets/images/feature/goudenlabel.png";
import gezondSporten from "../assets/images/feature/gezondsporten.png";
import wedstrijd from "../assets/images/feature/wedstrijd.png";
import leeftijden from "../assets/images/feature/leeftijden.png";
---

<Layout
  title="Judoclub Oosterzele - Traditioneel Judo voor Alle Leeftijden"
  description="Ontdek de kunst van judo bij Judoclub Oosterzele. Professionele training voor kinderen, jongeren en volwassenen in een moderne dojo."
>
  <Navbar />

  <main>
    <HeroSection
      title="Welkom bij"
      subtitle="Judoclub Oosterzele"
      description="Ontdek de traditionele kunst van judo in onze dojo. Wij bieden professionele training voor alle leeftijden en niveaus, met focus op techniek, respect en persoonlijke ontwikkeling."
      primaryButtonText="Probeer Gratis"
      primaryButtonLink="/about/proeflessen"
      secondaryButtonText="Leer Meer"
      secondaryButtonLink="/about/"
      imageUrl={heroImage}
      imageAlt="Foto startpagina"
    />

    <section class="features">
      <div class="container">
        <h2>Waarom Kiezen Voor Onze Club?</h2>

        <div class="features-grid">
          <FeatureCard
            title="Erkend met Gouden Label"
            description="Onze club is drager van de hoogste erkenning van Judo Vlaanderen: het Jeugdjudo Gouden Label, voor een jeugdvriendelijke en stimulerende omgeving."
            imageUrl={goudenLabel}
            imageAlt="Gouden Label Judo Vlaanderen"
            loading="eager"
          />

          <a
            href="https://www.judovlaanderen.be/gezond-ethisch-sporten/gezond-sporten/"
          >
            <FeatureCard
              title="Gezond Sporten"
              description="Bij Judoclub Oosterzele volgen we de richtlijnen voor Gezond en Ethisch Sporten zoals uitgezet door Judo Vlaanderen."
              imageUrl={gezondSporten}
              imageAlt="Logo Gezond Sporten"
              loading="eager"
            />
          </a>

          <FeatureCard
            title="Alle Leeftijden"
            description="Van 3 jaar tot volwassenen - iedereen is welkom om judo te leren in een veilige omgeving."
            imageUrl={leeftijden}
            imageAlt="Alle leeftijden welkom"
          />

          <FeatureCard
            title="Wedstrijd & Recreatie"
            description="Of je nu wilt deelnemen aan wedstrijden of gewoon voor de fun traint, wij hebben het juiste programma."
            imageUrl={wedstrijd}
            imageAlt="Wedstrijd en recreatie"
          />
        </div>
      </div>
    </section>

    <section class="training-groups">
      <div class="container">
        <h2>Onze Trainingsgroepen</h2>
        <div class="groups-grid">
          <a href="/groepen/kleuters" class="group-card-link">
            <TrainingGroupCard
              title="Kleuters (3-6 jaar)"
              description="Spelenderwijs leren bewegen, met speciale aandacht voor valtechnieken."
              schedules={[{ day: "Zondag", time: "9:00 - 9:45" }]}
            />
          </a>
          <a href="/groepen/benjamins" class="group-card-link">
            <TrainingGroupCard
              title="Benjamins (6-8 jaar)"
              description="Basis judotechnieken, respect voor anderen, coÃ¶rdinatie en balans."
              schedules={[
                { day: "Woensdag", time: "17:45 - 18:30" },
                { day: "Zondag", time: "9:00 - 9:45" },
              ]}
            />
          </a>
          <a href="/groepen/jongeren" class="group-card-link">
            <TrainingGroupCard
              title="Jongeren (8-14 jaar)"
              description="Oefengevechten op grond en rechtstaand, fysieke opwarming, gevorderde judotechniek."
              schedules={[
                { day: "Woensdag", time: "18:30 - 19:30" },
                { day: "Vrijdag", time: "19:30 - 20:30" },
                { day: "Zondag", time: "9:45 - 10:45" },
              ]}
            />
          </a>
          <a href="/groepen/volwassenen" class="group-card-link">
            <TrainingGroupCard
              title="Volwassenen (14+)"
              description="Recreatief of wedstrijdjudo, afhankelijk van je persoonlijke doelen. Geavanceerde judotechnieken."
              schedules={[
                { day: "Woensdag", time: "19:30 - 21:00" },
                { day: "Vrijdag", time: "19:30 - 21:00" },
                { day: "Zondag", time: "10:45 - 12:00" },
              ]}
            />
          </a>
        </div>
      </div>
    </section>

    <CTASection
      title="Klaar om te Beginnen?"
      description="Kom langs voor een gratis proefles en ontdek wat judo voor jou kan betekenen. Geen ervaring vereist!"
      primaryButtonText="Probeer Gratis"
      primaryButtonLink="/about/proeflessen"
      secondaryButtonText="Lesuren"
      secondaryButtonLink="/about/lesuren-locatie"
    />
  </main>

  <Footer />
</Layout>
